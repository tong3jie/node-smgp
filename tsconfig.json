{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "inlineSourceMap":true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "stripInternal": true,
      "pretty": true,
      "declaration": true,
      "typeRoots": [ "./typings", "./node_modules/@types"],
      "outDir": "dist"
    },
    "exclude": [
      "dist",
      "node_modules",
      "test"
    ]
  }